doctype html
html(lang="en")
    head
        title cqrs-sample - CQRS Sample with cqrs-domain, cqrs-eventdenormalizer, etc.
        link(href='/css/bootstrap.min.css', rel='stylesheet')
        link(href='/css/style-login.css', rel='stylesheet')

    body
        .container
          #login-view
              form.form-signin
                h2.form-signin-heading Login
                label.sr-only(for='inputEmail') Username
                input#inputEmail.form-control(type='test', placeholder='Email address', required='', autofocus='', name="username")
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', placeholder='Password', required='', name="password")
                p.form-signin-error#errorMessage
                button#submitUser.btn.btn-lg.btn-secondary.btn-block Login
        
        script(src='https://code.jquery.com/jquery-2.1.3.js', type='text/javascript')
        script(src='/js/lib/js.cookies.js', type='text/javascript')
        script(src='/js/lib/underscore.js', type='text/javascript')
        script(src='/js/lib/backbone.js', type='text/javascript')
        script(src='/js/lib/backbone-pageable.js', type='text/javascript')
        script(src='/js/lib/backboneCQRS-0.4.js', type='text/javascript')
        script(src='/js/lib/backgrid.js', type='text/javascript')
        script(src='/js/lib/backgrid-paginator.js', type='text/javascript')
        script(src='/js/lib/bootstrap.min.js')
        script(src='/js/lib/backbone.localStorage.js', type='text/javascript')
        script(src='/js/lib/recline.js')
        script(src='/socket.io/socket.io.js', type='text/javascript')
        script(src='/js/app.js', type='text/javascript')
