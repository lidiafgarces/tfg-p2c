{
  "name": "push2cloud-example",
  "version": "1.0.0",
  "description": "deployment manifest for push2cloud example",
  "target": {
    "type": "cloudfoundry",
    "api": "https://api.run.pivotal.io",
    "space": "mach",
    "org": "lidia",
    "delay": 500,
    "maxRetries": 60
  },
  "release": {
    "name": "tfg-p2c-test",
    "source": {
      "type": "git",
      "url": "https://github.com/lidiafgarces/tfg-p2c.git",
      "referenceValue": "master"
    },
    "manifest": "manifests/release.json"
  },
  "secureAppConnections": true,
  "domains": {
    "public": "scapp.io",
    "internal": "scapp.io"
  },
   "serviceMapping": {
    "redisdb" : {
      "type": "redis",
      "plan": "small"
    },
    "mogoeventstore" : {
      "type": "mongodb",
      "plan": "small"
    }
  },
  "applicationDefaults": {
    "memory": "512M",
    "disk": "512M",
    "instances": 1,
    "startTimeout": 600,
    "stageTimeout": 600,
    "gracePeriod": 20,
    "buildpack": "https://github.com/cloudfoundry/nodejs-buildpack.git",
    "env" : {
      "SYSTEM_VERSION": "${SYSTEM_VERSION}"
    }
  },
  "apps": {
    "push2cloud-auth": {
      "routes": {
        "public": [
          "push2cloud-auth"
        ]
      }
    },
    "push2cloud-cqrs-host": {
      "routes": {
        "public": [
          "push2cloud-cqrs-host"
        ]
      }
    },
    "push2cloud-cqrs-domain": {
      "routes": {
        "internal": [
          "push2cloud-cqrs-domain"
        ]
      }
    }
  }
}
